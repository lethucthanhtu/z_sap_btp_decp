<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    controllerName="zsapbtpdecp.controller.ThreeJS"
>
    <Page
        id="_IDGenPage1"
        title="ThreeJS View"
    >
        <content>
            <HBox id="_IDGenHBox" height="100%">
                <!-- Side Panel -->
                <ScrollContainer
                    id="_IDGenScrollContainer"
                    height="100%"
                    width="200px"
                    vertical="true"
                    focusable="true"

                >
                    <VBox
                        id="dynamicCheckBoxContainer"
                        height="100%"
                        class="sapUiSmallMargin"
                        items="{
                            path: '3jsobject>/objects'
                        }"
                    >
                        <CheckBox
                            id="_IDGenCheckBox"
                            text="{= ${3jsobject>name} || ${3jsobject>type}}"
                            selected="true"
                            select="onToggleModel"
                        >
                            <customData>
                                <core:CustomData
                                    key="modelKey"
                                    value="{3jsobject>id}"
                                />
                            </customData>
                        </CheckBox>
                    </VBox>
                </ScrollContainer>

                <!-- Three.js Canvas -->
                <VBox
                    id="_IDGenVBox2"
                    class="sapUiSmallMargin"
                    width="100%"
                >
                    <core:HTML
                        id="threeContainer"
                        content="&lt;div id='threejs-canvas' style='width:100%; height:500px;'&gt;&lt;/div&gt;"
                    />
                </VBox>
            </HBox>
        </content>
    </Page>
</mvc:View>
