<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    controllerName="zsapbtpdecp.controller.ThreeJS"
>
    <Page
        id="_IDGenPage1"
        title="ThreeJS View"
    >
        <content>
            <HBox
                id="_IDGenHBox"
                height="100%"
            >
                <!-- Side Panel -->
                <ScrollContainer
                    id="_IDGenScrollContainer"
                    height="100%"
                    vertical="true"
                    focusable="true"
                >
                    <IconTabBar
                        id="sideTabBar"
                        class=""
                        expandable="false"
                        upperCase="false"
                        selectedKey="toggle"
                    >
                        <!-- Tab 1: Toggle Visibility -->
                        <items>
                            <IconTabFilter
                                id="_IDGenIconTabFilter1"
                                key="toggle"
                                text="Toggle"
                                icon="sap-icon://hide"
                            >
                                <VBox
                                    id="toggleContainer"
                                    items="{
                                        path: '3jsobject>/objects'
                                    }"
                                >
                                    <CheckBox
                                        id="_IDGenCheckBox"
                                        text="{= ${3jsobject>name} || ${3jsobject>type}}"
                                        selected="true"
                                        select="onToggleModel"
                                    >
                                        <customData>
                                            <core:CustomData
                                                key="modelKey"
                                                value="{3jsobject>id}"
                                            />
                                        </customData>
                                    </CheckBox>
                                </VBox>
                            </IconTabFilter>

                            <!-- Tab 2: Navigate -->
                            <IconTabFilter
                                id="_IDGenIconTabFilter2"
                                key="navigate"
                                text="Go To"
                                icon="sap-icon://navigation-right-arrow"
                            >
                                <VBox
                                    id="navigateContainer"
                                    items="{
                                        path: '3jsobject>/objects'
                                    }"
                                >
                                    <Button
                                        id="_IDGenButton2"
                                        width="100%"
                                        text="{= ${3jsobject>name} || ${3jsobject>type}}"
                                        press="onNavigateToObject"
                                    >
                                        <customData>
                                            <core:CustomData
                                                key="modelKey"
                                                value="{3jsobject>id}"
                                            />
                                        </customData>
                                    </Button>
                                </VBox>
                            </IconTabFilter>
                        </items>
                    </IconTabBar>
                </ScrollContainer>

                <!-- Three.js Canvas -->
                <VBox
                    id="_IDGenVBox2"
                    class="sapUiSmallMargin"
                    width="100%"
                >
                    <core:HTML
                        id="threeContainer"
                        content="&lt;div id='threejs-canvas' style='width:100%; height:85vh;'&gt;&lt;/div&gt;"
                    />
                </VBox>
            </HBox>
        </content>
    </Page>
</mvc:View>
