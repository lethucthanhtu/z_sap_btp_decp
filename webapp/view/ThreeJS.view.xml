<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    controllerName="zsapbtpdecp.controller.ThreeJS"
>
    <Page
        id="_IDGenPage1"
        title="ThreeJS View"
    >
        <content>
            <HBox id="_IDGenHBox">
                <!-- Side Panel -->
                <VBox
                    id="dynamicCheckBoxContainer"
                    width="200px"
                    class="sapUiSmallMargin"
                    items="{
                        path: 'test1config>/model'
                    }"
                >
                    <CheckBox
                        id="_IDGenCheckBox"
                        text="{test1config>name}"
                        selected="true"
                        select="onToggleModel"
                    >
                        <customData>
                            <core:CustomData
                                key="modelKey"
                                value="{test1config>name}"
                            />
                        </customData>
                    </CheckBox>
                </VBox>

                <!-- Three.js Canvas -->
                <VBox
                    id="_IDGenVBox2"
                    class="sapUiSmallMargin"
                    width="100%"
                >
                    <core:HTML
                        id="threeContainer"
                        content="&lt;div id='threejs-canvas' style='width:100%; height:500px;'&gt;&lt;/div&gt;"
                    />
                </VBox>
            </HBox>
        </content>
    </Page>
</mvc:View>
