{
	"compilerOptions": {
		"target": "es2022",
		"module": "es2022",
		"skipLibCheck": true,
		"allowJs": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"moduleResolution": "node",
		"rootDir": "./webapp",
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"zsapbtpdecp/*": [
				"./webapp/*"
			],
			"unit/*": [
				"./webapp/test/unit/*"
			],
			"integration/*": [
				"./webapp/test/integration/*"
			]
		},
		"typeRoots": [
			"./node_modules/@types",
			"./node_modudes/@sapui5/types"
		],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
	},
	"include": [
		"./webapp/**/*",
		"./webapp/types/sapui5-global.d.ts"
	],
	"exclude": [
		"node_modules",
		"./webapp/test/**/*"
	]
}